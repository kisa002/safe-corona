<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:onClick="onClick">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:alpha="0.6"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_more_laboratory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_more_laboratory"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/option_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_more_laboratory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실험실"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_more_laboratory"
                android:fontFamily="@font/ko_pub_dotum_medium"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_more_prevention_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_more_prevention_method"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_more_prevention_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예방 방법"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/ko_pub_dotum_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_more_prevention_method"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:background="#AAAAAA"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_more_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="15dp"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iv_more_close"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/x_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="창 닫기"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/ko_pub_dotum_medium"
                app:layout_constraintStart_toEndOf="@id/iv_more_close"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>