<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AlertActivity"
    android:background="@drawable/drawable_detail_rounded"
    android:onClick="onClick">

    <TextView
        android:id="@+id/tv_alert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확진자 경고!"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/ko_pub_dotum_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="23dp"/>

    <View
        android:id="@+id/v_alert_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_alert_name"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="#AFAFAF"/>

    <ImageView
        android:id="@+id/iv_alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/danger"
        app:layout_constraintStart_toStartOf="@id/tv_alert_name"
        app:layout_constraintTop_toBottomOf="@id/v_alert_line"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경고! 현재 확진자가 활동한 장소에 근접해있습니다."
        android:textColor="#000000"
        android:textSize="15sp"
        android:fontFamily="@font/ko_pub_dotum_bold"
        app:layout_constraintStart_toEndOf="@id/iv_alert_icon"
        app:layout_constraintTop_toBottomOf="@id/v_alert_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:id="@+id/tv_alert_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="본 내용이 나오는 경우 오류가 발생한 것 입니다!"
        android:textColor="#000000"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="13dp"
        android:fontFamily="@font/ko_pub_dotum_medium"
        app:layout_constraintStart_toStartOf="@id/tv_alert_title"
        app:layout_constraintEnd_toEndOf="@id/v_alert_line"
        app:layout_constraintTop_toBottomOf="@id/tv_alert_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="2dp"
        android:paddingBottom="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginRight="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>