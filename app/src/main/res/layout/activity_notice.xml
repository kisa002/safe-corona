<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NoticeActivity"
    android:background="@drawable/drawable_detail_rounded">

    <ImageView
        android:id="@+id/iv_notice_title"
        android:layout_width="24.3dp"
        android:layout_height="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="30.7dp"
        android:src="@drawable/notice"/>

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/iv_notice_title"
        app:layout_constraintTop_toTopOf="@id/iv_notice_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_notice_title"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ko_pub_dotum_bold"/>

    <View
        android:id="@+id/v_notice_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_notice_title"
        android:layout_marginTop="19dp"
        android:layout_marginHorizontal="20dp"
        android:background="#AFAFAF"/>

    <TextView
        android:id="@+id/tv_notice_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최신 업데이트 버전이 있습니다!\n그 누구보다 빠르게 남들과는 다르게 설치해보세요!"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/ko_pub_dotum_medium"
        app:layout_constraintTop_toTopOf="@id/v_notice_line"
        app:layout_constraintStart_toStartOf="@id/iv_notice_title"
        app:layout_constraintEnd_toEndOf="@id/v_notice_line"
        android:layout_marginHorizontal="30.7dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_notice_close"
        android:onClick="onClick"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/drawable_rounded_button"
        android:backgroundTint="#e77d7d"
        android:text="Close"
        android:textSize="14sp"
        android:textColor="#FFFF"
        android:fontFamily="@font/ko_pub_dotum_bold"
        app:layout_constraintTop_toBottomOf="@id/tv_notice_context"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>